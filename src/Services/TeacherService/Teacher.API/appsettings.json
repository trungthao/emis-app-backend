{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=3307;Database=EMIS_TeacherDB;User=emisuser;Password=emispassword;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "JwtSettings": {
    "SecretKey": "EMIS-Super-Secret-Key-For-JWT-Token-Generation-2025-MinLength32Chars",
    "Issuer": "EMIS-System",
    "Audience": "EMIS-Clients",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092,localhost:9093,localhost:9094",
    "ClientId": "teacher-service",
    "GroupId": "emis-teacher-service",
    "Acks": "all",
    "CompressionType": "lz4",
    "EnableIdempotence": true,
    "AutoOffsetReset": "earliest",
    "EnableAutoCommit": false,
    "RequestTimeoutMs": 30000,
    "MessageSendMaxRetries": 3,
    "SessionTimeoutMs": 30000
  }
}
