{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.SignalR": "Information",
      "Microsoft.AspNetCore.Http.Connections": "Information"
    }
  },
  "AllowedHosts": "*",
  "MongoDbSettings": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "EMIS_MessageDB",
    "ConversationsCollectionName": "conversations",
    "MessagesCollectionName": "messages"
  },
  "KafkaSettings": {
    "BootstrapServers": "localhost:9092",
    "GroupId": "message-service-group",
    "ClientId": "message-service",
    "AutoOffsetReset": "earliest",
    "EnableAutoCommit": true
  },
  "MessagePersistence": {
    "BatchSize": 50,
    "FlushIntervalMs": 1000,
    "Comment": "BatchSize: Số messages tối đa trong 1 batch write. FlushIntervalMs: Flush mỗi X milliseconds"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5005"
      }
    }
  }
}