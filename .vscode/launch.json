{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug TeacherService",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-teacher-service",
      "program": "${workspaceFolder}/src/Services/TeacherService/Teacher.API/bin/Debug/net8.0/Teacher.API.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Services/TeacherService/Teacher.API",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/swagger"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5001"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "Debug AuthService",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-auth-service",
      "program": "${workspaceFolder}/src/Services/AuthService/Auth.API/bin/Debug/net8.0/Auth.API.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Services/AuthService/Auth.API",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/swagger"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5002"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "Debug StudentService",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-student-service",
      "program": "${workspaceFolder}/src/Services/StudentService/Student.API/bin/Debug/net8.0/Student.API.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Services/StudentService/Student.API",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/swagger"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5003"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug All Services",
      "configurations": [
        "Debug TeacherService",
        "Debug AuthService",
        "Debug StudentService"
      ],
      "stopAll": true
    },
    {
      "name": "Debug Teacher + Auth (E2E Test)",
      "configurations": [
        "Debug TeacherService",
        "Debug AuthService"
      ],
      "stopAll": true
    }
  ]
}